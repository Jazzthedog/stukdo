<!--# used for both Edit and New tasks!-->
<%= simple_form_for(@task, html: {class:"form-signin"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :content, label: false, required: true, autofocus: true, 
    	input_html: {class:"form-control"}, placeholder: "Content" %>

    <%= f.button :submit, class: "btn btn-lg btn-primary btn-block" %>
    <%#= f.button :submit, "Archive Task", class: "btn btn-lg btn-primary btn-block" %>
    <% if @task.state == 'done' %>
      <%= link_to "Archive Task", change_task_path(@task, state: 'archive'), method: :put %>
    <% end %>
<% end %>
